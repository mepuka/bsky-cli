# Core app config
SKYGENT_SERVICE=https://bsky.social
SKYGENT_STORE_ROOT=~/.skygent
SKYGENT_OUTPUT_FORMAT=ndjson
SKYGENT_IDENTIFIER=

# Credentials (do not commit real values)
SKYGENT_PASSWORD=
SKYGENT_CREDENTIALS_KEY=

# Bluesky rate limiting / retries
SKYGENT_BSKY_RATE_LIMIT=250 millis
SKYGENT_BSKY_RETRY_BASE=250 millis
SKYGENT_BSKY_RETRY_MAX=5

# Jetstream profile resolution (request batching + cache)
SKYGENT_PROFILE_BATCH_SIZE=25
SKYGENT_PROFILE_CACHE_CAPACITY=5000
SKYGENT_PROFILE_CACHE_TTL=6 hours

# Resource monitoring (warnings only; set to 0 to disable)
SKYGENT_RESOURCE_CHECK_INTERVAL=60 seconds
SKYGENT_RESOURCE_STORE_WARN_BYTES=1073741824
SKYGENT_RESOURCE_RSS_WARN_BYTES=1073741824

# Sync settings
SKYGENT_SYNC_CONCURRENCY=5
SKYGENT_SYNC_CHECKPOINT_EVERY=100
SKYGENT_SYNC_CHECKPOINT_INTERVAL_MS=5000
